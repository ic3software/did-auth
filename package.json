{
	"name": "did-auth",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:generate": "pnpm exec drizzle-kit generate",
		"db:migrate": "pnpm exec wrangler d1 migrations apply did-auth-preview --local",
		"db:migrate:preview": "pnpm exec wrangler d1 migrations apply did-auth-preview --remote",
		"db:migrate:prod": "pnpm exec wrangler d1 migrations apply did-auth --remote --env production"
	},
	"dependencies": {
		"@paralleldrive/cuid2": "^2.3.1",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.5",
		"drizzle-orm": "^0.44.7",
		"resend": "^4.8.0",
		"svelte": "^5.46.1",
		"tailwindcss": "^4.1.18",
		"uint8arrays": "^5.1.0"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20260103.0",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-cloudflare": "^7.0.4",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.3.1",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^24.10.4",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.0.0",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.51.0",
		"vite": "^6.4.1",
		"vitest": "^3.2.4",
		"wrangler": "^4.54.0"
	},
	"engines": {
		"node": ">=20.19.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"workerd"
		],
		"ignoredBuiltDependencies": [
			"sharp"
		]
	},
	"lint-staged": {
		"*.{ts,svelte}": [
			"prettier --check",
			"eslint --max-warnings=0"
		],
		"*.{css,html,json}": [
			"prettier --check"
		]
	}
}
